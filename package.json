{
  "name": "story-party",
  "private": true,
  "workspaces": [
    "server",
    "host",
    "player",
    "shared"
  ],
  "scripts": {
    "dev:server": "cd server && npm run dev",
    "dev:host": "cd host && npm run dev",
    "dev:player": "cd player && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:host\" \"npm run dev:player\"",
    "build": "npm run build --workspaces",
    "build:server": "cd server && npm run build",
    "build:host": "cd host && npm run build",
    "build:player": "cd player && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  }
}
